<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author" />

    <TextView
        android:id="@+id/textview_book_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ISBN" />

    <TextView
        android:id="@+id/textview_book_publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PublishDate" />

    <TextView
        android:id="@+id/textview_book_publisher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publisher" />

    <TextView
        android:id="@+id/textview_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title" />
</LinearLayout>